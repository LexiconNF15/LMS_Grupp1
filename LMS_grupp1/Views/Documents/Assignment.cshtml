@model LMS_grupp1.Models.Document

@{
    ViewBag.Title = "Ladda upp dokument";
    DateTime now = DateTime.Now.Date;
    DateTime limit = Model.Deadline.HasValue ? (DateTime)Model.Deadline : DateTime.Now.Date.AddDays(1.0);
}

<h2>Ladda upp svar på inlämningsuppgift: @Html.DisplayFor(model => model.Name)</h2>
<h4>Sista inlämning: @Html.DisplayFor(model => model.Deadline)</h4>
<hr />

@if (now <= limit)
{
    using (Html.BeginForm("Assignment", "Documents", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.LevelId)
            @Html.HiddenFor(model => model.Level)

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label for="file">Dokument:</label>
                    <input type="file" name="file" id="file" class="btn btn-gray" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Skapa" class="btn btn-gray" />
                </div>
            </div>
        </div>
    }
}

<div>
    @Html.ActionLink("Tillbaka", "Details", "Activities", new { id = Model.LevelId }, new { @class = "btn btn-gray" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
