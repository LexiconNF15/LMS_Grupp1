@model LMS_grupp1.Models.Group

@{
    ViewBag.Title = "Kursdeltagare";
}

<h2>Studenter i grupp @Model.Name</h2>

<div>
    <h4>Studenter</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>

@foreach (var item in Model.Users)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Personnumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>

        @if (User.IsInRole("Teacher"))
        {
            <td>
                @Html.ActionLink("Ändra", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Uppgifter", "Details", new { id = item.Id }) |
                @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
            </td>
        }
        
    </tr>
}

<p>
@if (User.IsInRole("Teacher")){
    @Html.ActionLink("Ändra", "Edit", new { id = Model.Id })
}
    @Html.ActionLink("Tillbaka", "Index")
</p>
