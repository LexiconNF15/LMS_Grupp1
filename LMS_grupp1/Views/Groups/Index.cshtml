@model IEnumerable<LMS_grupp1.Models.Group>

@{
    ViewBag.Title = "Home Page";
}

<h2>Lexicon erbjuder följande utbildningar</h2>


<table class="table">
    <tr>

        <th>
            Status
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th></th>
    </tr>
    @{
        DateTime now = DateTime.Now.Date;
    }

    @foreach (var item in Model)
    {
        <tr>
            @if (now > item.EndTime)
            {
                <td>
                    <a class="btn btn-red" data-toggle="tooltip" title="Kursen är avslutad">
                        Avslutad
                    </a>
                </td>

            }
            else if (now < item.StartTime)
            {
                <td>
                    <a class="btn btn-green" data-toggle="tooltip" title="Kursen är inte startad">
                        Kommande
                    </a>
                </td>

            }
            else
            {
                <td>
                    <a class="btn btn-yellow" data-toggle="tooltip" title="Kursen pågår">
                        Pågående  
                    </a>
                </td>

            }
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>

        </tr>
    }

</table>

<p>
    <h4>
        Förkunskapstest för att finna rätt kunskapsnivå finns här:

    </h4>
    <ppp>
    <a href="http://www.lexicon.se/IT-anvandare/Erbjudande/Forkunskapstest/" 
       class="btn btn-primary btn-lg">Testa dig själv &raquo;</a>
    </ppp>
    
</p>



