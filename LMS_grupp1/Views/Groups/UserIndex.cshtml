@model LMS_grupp1.Models.Group
@using System.Web.Security
@{
    ViewBag.Title = "Kursdeltagare";
}

<h2>Deltagare i grupp @Model.Name</h2>
@if (User.IsInRole("Teacher"))
{
    <p>
        @Html.ActionLink("Lägg till deltagare", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" }) |
        @Html.ActionLink("Lämna som lärare", "RemoveTeacher")
    </p>
}
<div>
    <h4>Deltagarlista</h4>
    <hr />
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("E-post")
        </th>
        <th>
            @Html.DisplayName("Namn")
        </th>
        <th>
            @Html.DisplayName("Personnummer")
        </th>
    </tr> 
    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personnumber)
            </td>

            @if (User.IsInRole("Teacher"))
            {
                <td>
                    @Html.ActionLink("Ändra deltagaruppgift", "EditUser", "Account", new { id = item.Id }, null) |
                    @Html.ActionLink("Ta bort deltagare", "DeleteUser", "Account", new { id = item.Id }, null)
                </td>
            }

        </tr>
    }
</table>
<p></p>
    @if (User.IsInRole("Teacher"))
    {
        @Html.ActionLink("Ändra gruppuppgifter", "GroupEdit", new { id = Model.Id }) @:|
        @Html.ActionLink("Tillbaka till kurssida", "Index")
     }
     else
    {
        @Html.ActionLink("Tillbaka till kurssida", "Index")
    }
</p>
