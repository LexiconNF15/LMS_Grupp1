@model LMS_grupp1.Models.Group

@{
    ViewBag.Title = "Kurser";
}

<h2>
    Kurser för grupp @Model.Name
</h2>
@if (User.IsInRole("Teacher"))
{
    <p>
        @Html.ActionLink("Lägg till kurs", "Create", "Courses", new { groupId = Model.Id }, null) |
        @Html.ActionLink("Lämna som lärare", "RemoveTeacher")
    </p>
}

@if (Model.Documents.Count > 0)
{
    <div>
        <h4>Dokument</h4>
        <hr />
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Documents.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documents.First().TimeStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documents.First().Originator)
            </th>
        </tr>
        @foreach (var item in Model.Documents)
        {
            <tr>
                <td>
                    <a href="@item.LocationUrl">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeStamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Originator)
                </td>
                @if (User.IsInRole("Teacher"))
                {
                    <td>
                        @Html.ActionLink("Ta bort", "Delete", "Documents", new { id = item.Id }, null)
                    </td>
                }
            </tr>
        }
    </table>
}
@Html.Action("Index", "Courses", new { groupId  = Model.Id})

@if (User.IsInRole("Teacher"))
{
    <p>
        @Html.ActionLink("Ändra gruppuppgifter", "GroupEdit", new { id = Model.Id })
    </p>
}

