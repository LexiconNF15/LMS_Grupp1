@model LMS_grupp1.Models.Group

@{
    ViewBag.Title = "Kurser";
}
<div>
    <h2>
        Kurser för grupp @Model.Name
    </h2>
</div>
<div>
    <h4>Period:  @Html.DisplayFor(model => model.StartTime) -  @Html.DisplayFor(model => model.EndTime)</h4> <hr />
</div>

@if (User.IsInRole("Teacher"))
{
    <p>
        @* @Html.ActionLink("Lägg till kurs", "Create", "Courses", new { groupId = Model.Id }, null) *@
        <a href="@Url.Action("Create", "Courses", new { groupId = Model.Id })" class="btn btn-own btn-comb-thin">
            <span class="glyphicon glyphicon-list-alt glyph-comb-lg" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-plus glyph-add-norm" aria-hidden="true"></span>
        </a>
        @*@@Html.ActionLink("Lämna som lärare", "RemoveTeacher") *@
        <a href="@Url.Action("RemoveTeacher", "Groups")" class="btn btn-own btn-comb-thin">
            <span class="glyphicon glyphicon-briefcase glyph-comb-lg" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-share-alt glyph-add-norm" aria-hidden="true"></span>
        </a>
    </p>
}

@if (Model.Documents.Count > 0)
{
    <div>
        <h4>Dokument</h4>
        <hr />
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Documents.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documents.First().TimeStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documents.First().Originator)
            </th>
        </tr>
        @foreach (var item in Model.Documents)
        {
            <tr>
                <td>
                    <a href="@item.LocationUrl">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeStamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Originator)
                </td>
                @if (User.IsInRole("Teacher"))
                {
                    <td>
                        @Html.ActionLink("Ta bort", "Delete", "Documents", new { id = item.Id }, null)
                    </td>
                }
            </tr>
        }
    </table>
}
@Html.Action("Index", "Courses", new { groupId  = Model.Id})

@if (User.IsInRole("Teacher"))
{
    <p>
        @* @Html.ActionLink("Ändra gruppuppgifter", "Edit", new { id = Model.Id }) *@
        <a href="@Url.Action("Edit", "Groups", new { id = Model.Id})" class="btn btn-own btn-thin">
            <span class="glyphicon glyphicon-pencil glyph-lg" aria-hidden="true"></span>
        </a>
    </p>
}

